<!-- Theme controller script (keep exactly this) -->
<script>
  const themeController = document.querySelector('.theme-controller');
  if (localStorage.getItem('theme')) {
    document.documentElement.setAttribute('data-theme', localStorage.getItem('theme'));
    if (localStorage.getItem('theme') === 'dark') themeController.checked = true;
  }
  themeController.addEventListener('change', () => {
    const theme = themeController.checked ? 'dark' : 'light';
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
  });
</script>

<!-- CLERK MODAL + USERBUTTON SCRIPT – THIS FIXES EVERYTHING -->
<script>
  const clerkInterval = setInterval(() => {
    if (window.Clerk) {
      clearInterval(clerkInterval);

      Clerk.load().then(() => {
        const userButtonDiv   = document.getElementById("clerk-user-button");
        const desktopButtons  = document.getElementById("desktop-buttons");
        const mobileMenuWrap  = document.getElementById("mobile-menu");

        const desktopSignin   = document.getElementById("desktop-signin");
        const desktopSignup   = document.getElementById("desktop-signup");
        const mobileSignin    = document.getElementById("mobile-signin");
        const mobileSignup    = document.getElementById("mobile-signup");

        // Open Clerk modals
        desktopSignin?.addEventListener("click", (e) => {
          e.preventDefault();
          Clerk.openSignIn();
        });
        desktopSignup?.addEventListener("click", (e) => {
          e.preventDefault();
          Clerk.openSignUp();
        });
        mobileSignin?.addEventListener("click", (e) => {
          e.preventDefault();
          Clerk.openSignIn();
        });
        mobileSignup?.addEventListener("click", (e) => {
          e.preventDefault();
          Clerk.openSignUp();
        });

        function updateUI() {
          const isSignedIn = !!Clerk.user;

          if (isSignedIn) {
            // ✅ Signed in
            if (desktopButtons) desktopButtons.style.display = "none";
            if (mobileMenuWrap) mobileMenuWrap.style.display = "none";

            if (userButtonDiv && userButtonDiv.childElementCount === 0) {
              Clerk.mountUserButton(userButtonDiv);
            }
          } else {
            // ❌ Signed out
            if (desktopButtons) desktopButtons.style.display = "";
            if (mobileMenuWrap) mobileMenuWrap.style.display = "";    

            if (userButtonDiv) userButtonDiv.innerHTML = "";      
          }
        }

        // Run once on load
        updateUI();
        // Run whenever auth state changes
        Clerk.addListener(() => updateUI());
      });
    }
  }, 50);
</script>


